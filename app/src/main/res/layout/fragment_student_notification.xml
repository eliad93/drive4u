<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/textViewStudentNotificationsNoNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/no_notifications_msg"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textViewStudentNotificationsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/title_notifications"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/main_headers" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewStudentNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewStudentNotificationsHeader"
        android:layout_marginTop="@dimen/vertical_margin_medium"/>

</RelativeLayout>

