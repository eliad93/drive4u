<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_padding"
    android:background="@color/colorRegistrationFormFieldBorder">

    <android.support.v7.widget.CardView
        android:id="@+id/teacherItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding">

            <ImageView
                android:id="@+id/imageViewTeacherSearch"
                android:layout_width="@dimen/list_item_image_size"
                android:layout_height="@dimen/list_item_image_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_user_foreground"
                android:layout_alignParentStart="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textViewTeacherSearchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/vertical_margin_X_small"
                android:layout_marginLeft="@dimen/horizontal_margin_small"
                android:layout_centerHorizontal="true"
                android:text="@string/name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/list_item_text_size_big"
                android:layout_marginStart="@dimen/horizontal_margin_small" />

            <TextView
                android:id="@+id/textViewTeacherSearchCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageViewTeacherSearch"
                android:layout_below="@id/textViewTeacherSearchName"
                android:layout_marginLeft="@dimen/horizontal_margin_small"
                android:text="@string/city"
                android:textSize="@dimen/list_item_text_size_medium"
                android:layout_toEndOf="@id/imageViewTeacherSearch"
                android:layout_marginStart="@dimen/horizontal_margin_small" />

            <TextView
                android:id="@+id/textViewTeacherSearchStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/textViewTeacherSearchCity"
                android:layout_marginRight="@dimen/horizontal_margin_small"
                android:layout_below="@+id/textViewTeacherSearchName"
                android:text="@string/number_of_students"
                android:textSize="@dimen/list_item_text_size_medium"
                android:layout_marginEnd="@dimen/horizontal_margin_small"
                android:layout_toStartOf="@id/textViewTeacherSearchCity" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>