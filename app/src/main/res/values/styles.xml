<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="editTextRegFormField">
        <item name="android:layout_width">@dimen/editTextRegFormFieldWidth</item>
        <item name="android:layout_height">@dimen/editTextRegFormFieldHeight</item>
        <item name="android:textSize">@dimen/editTextRegFormFieldTextSize</item>
        <item name="android:background">@drawable/reg_form_field_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonUserTypeChoice">
        <item name="android:layout_width">@dimen/big_buttons_width</item>
        <item name="android:layout_height">@dimen/big_buttons_height</item>
    </style>

    <style name="LogoPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kaushan_script</item>
        <item name="android:text">@string/app_name_logo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
